@model Vital.Model.CustomerModel

@{
    ViewBag.Title = "Registration";
}
<div class="panel" style="background: #ededed; border: #ededed; margin-top: 0px; padding-top: 5px;">
    <div class="row">
        <div class="twelve columns">
            <h2 style="color: #f79020; margin-bottom: 25px;">Registration</h2>
        </div>
    </div>
    <div class="row">
        <div class="twelve columns">
            <dl class="tabs" style="border-bottom: solid 1px #ee8f1e; margin-bottom: 0px;">
                <dd class="active"><a href="#simple1" style="cursor: default; color: #ffffff; background: #ee8f1e; border-left: 1px solid #ee8f1e; border-right: 1px solid #ee8f1e; font-weight: normal;">Registration</a></dd>
            </dl>
            <ul class="tabs-content">
                <li class="active" id="simple1Tab">
                    <div class="panel" style="background: #fff; border: solid 1px #ee8f1e; margin: 0 0 22px 0; padding-top: 0px;">
                        <div class="row">
                            <div class="twelve columns">
                                <p style="margin-top: 14px;">Required fields are indicated with *.</p>
                                <form action="~/Account/Register" method="POST">
                                    @Html.AntiForgeryToken()
                                    <fieldset>
                                        <legend style="color: #f6a11d; margin-bottom: 20px;">Contact Information</legend>
                                        <label>*Company Name:</label>
                                        @Html.ValidationMessageFor(m => m.CompanyName)
                                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "eight" })
                                        <label>*Contact Person:</label>
                                        @Html.ValidationMessageFor(m => m.ContactPerson)
                                        @Html.TextBoxFor(m => m.ContactPerson, new { @class = "eight" })
                                        <label>*E-mail:</label>
                                        @Html.ValidationMessageFor(m => m.Email)
                                        @Html.TextBoxFor(m => m.Email, new { @class = "eight" })
                                        <label>*Confirm E-mail:</label>
                                        @Html.ValidationMessageFor(m => m.VerifyEmail)
                                        @Html.TextBoxFor(m => m.VerifyEmail, new { @class = "eight" })
                                        <label>*Address1:</label>
                                        @Html.ValidationMessageFor(m => m.Address1)
                                        @Html.TextBoxFor(m => m.Address1, new { @class = "eight" })
                                        <label>Address2:</label>
                                        @Html.ValidationMessageFor(m => m.Address2)
                                        @Html.TextBoxFor(m => m.Address2, new { @class = "eight" })
                                        <label>*City:</label>
                                        @Html.ValidationMessageFor(m => m.City)
                                        @Html.TextBoxFor(m => m.City, new { @class = "eight" })
                                        <label>*State/Province:</label>
                                        @Html.ValidationMessageFor(m => m.State)
                                        @Html.DropDownListFor(m => m.State, VitalHtmlHelper.GetStateProvince().ToSelectList(), new { @class = "eight" })
                                        <label>*ZIP/Postal:</label>
                                        @Html.ValidationMessageFor(m => m.Zip)
                                        @Html.TextBoxFor(m => m.Zip, new { @class = "eight" })
                                        <label>*Country:</label>
                                        @Html.ValidationMessageFor(m => m.Country)
                                        @Html.DropDownListFor(m => m.Country, VitalHtmlHelper.GetCountryList().ToSelectList(), new { @class = "eight" })
                                        <label>Phone no.:</label>
                                        @Html.ValidationMessageFor(m => m.Phone)
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "eight" })
                                    </fieldset>

                                    <fieldset>
                                        <legend style="color: #f6a11d; margin-bottom: 20px;">Login Information</legend>
                                        <label>*Create Username:</label>
                                        @Html.ValidationMessageFor(m => m.Username)
                                        @Html.TextBoxFor(m => m.Username, new { @class = "eight" })
                                        <label>*Create Password:</label>
                                        @Html.ValidationMessageFor(m => m.Password)
                                        @Html.PasswordFor(m => m.Password, new { @class = "eight" })
                                        <label>*Confirm Password:</label>
                                        @Html.ValidationMessageFor(m => m.VerifyPassword)
                                        @Html.PasswordFor(m => m.VerifyPassword, new { @class = "eight" })
                                    </fieldset>

                                    <input class="large button right" type="submit" value="Submit" />
                                </form>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
