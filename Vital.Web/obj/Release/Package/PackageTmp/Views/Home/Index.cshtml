    </div>
</div>
<div class="panel" style="background: #ededed; border: #ededed; margin-top: 0px; padding-top: 0px; padding-bottom: 0px;">
    <div class="row">

       
           
    @if (Request.IsAuthenticated)
    {

        <div style="float:left;width:150px;height:1px;"></div>

    }
    else
    {
        <div class="four columns" style="padding-right: 0px;">
            <div class="panel" style="background: #e7e7e7; border-bottom: none; border-top: 1px solid #d5d5d5; border-left: 1px solid #d5d5d5; border-right: 1px solid #d5d5d5; margin-top: 10px; margin-bottom: 0; padding-bottom: 8px; padding-top: 8px;">
                <div class="row">
                    <div class="twelve columns">
                        <h5 style="margin-top: 0; margin-bottom: 0;">Welcome</h5>
                    </div>
                </div>
            </div>
            <div class="panel" style="background: #f5f5f5; border: 1px solid #d5d5d5; margin-top: 10px; margin-bottom: 10px; margin-top: 0px;">
                <div class="row">
                    <script type="text/javascript">

                        function submitx() {

                            var uname = $("#username");
                            var pword = $("#password");

                            if (uname.val() == "" || pword.val() == "") {
                                alert("Please input a username and password.");
                            } else {
                                $("#loginForm").submit();
                            }


                        }

                    </script>
                    <div class="twelve columns">
                        <p style="color: #58585a">Let us manage your shipping deals. Expect nothing but world class and fast track results.</p>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "loginForm" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
    <input type="text" name="UserName" placeholder="Username" id="username" />
    <input type="password" name="Password" placeholder="Password" id="password" />
                            <label>
                                <input class="check-box" name="RememberMe" data-val="true" data-val-required="The RememberMe field is required." id="RememberMe" name="RememberMe" type="checkbox" value="true"><input name="RememberMe" type="hidden" value="false">
                                Remember Me
                            </label>
                            <ul class="square" style="margin-bottom: 0px;">
                                
                                <li id="regstyle"><a href="~/Account/Register">Register Now.</a></li>
                            </ul>
    <input type="button" onclick="submitx()" value="Login" class="small button right" style="width: 80px;" />
                        }
                    </div>
                </div>
            </div>
        </div>
    }
                
            
       

        
        <div class="four columns" style="padding-right: 0px;">
            <div class="panel" style="background: #e7e7e7; border-bottom: none; border-top: 1px solid #d5d5d5; border-left: 1px solid #d5d5d5; border-right: 1px solid #d5d5d5; margin-top: 10px; margin-bottom: 0; padding-bottom: 8px; padding-top: 8px;">
                <div class="row">
                    <div class="twelve columns">
                        <h5 style="margin-top: 0; margin-bottom: 0;">Track a Shipment<a id="helpicon" style="margin-top: 0; margin-bottom: 0; float: right; font-size: 13px;" href="#">Help</a></h5>
                    </div>
                </div>
            </div>
            <div class="panel" style="background: #f5f5f5; border: 1px solid #d5d5d5; margin-bottom: 10px;">
                <div class="row">
                    <div class="twelve columns">
                        @using (Html.BeginForm("Index", "TrackShipment", FormMethod.Post))
                        {
                            @Html.ValidationSummary()
                            <p style="color: #58585a">Enter up to 30 UPS tracking or door tag numbers (one per line).</p>
                            <textarea name="trackingNumbers" placeholder="" style="max-height: 167px; min-height: 167px; max-width: 255px; min-width: 255px;"></textarea>
                            <input type="submit"  value="Submit" class="small button right" style="width: 80px;" />
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="four columns">
            <div class="panel" style="background: #e7e7e7; border-bottom: none; border-top: 1px solid #d5d5d5; border-left: 1px solid #d5d5d5; border-right: 1px solid #d5d5d5; margin-top: 10px; margin-bottom: 0; padding-bottom: 8px; padding-top: 8px;">
                <div class="row">
                    <div class="twelve columns">
                        <h5 style="color: #ee8f1e; margin-top: 0px; margin-bottom: 0px;">Quick access</h5>
                    </div>
                </div>
            </div>



            
            <div class="panel" style="background: #f5f5f5; border: 1px solid #d5d5d5; margin-top: 10px; margin-bottom: 10px; margin-top: 0px; padding-top: 0; height: 310px;">
                <div class="row">
                    <div class="twelve columns">
                        <ul class="twelve side-nav" style="padding-left: 20px;">
                            <li class="active"><a href="~/Quote/Index" id="request">Request a Quote</a></li>
                            <li class="divider" style="border-top: 1px solid #dbdbdb;"></li>
                            <li class="active"><a href="~/CalculateTime/Index" id="calctime">Calculate Time</a></li>
                            <li class="divider" style="border-top: 1px solid #dbdbdb;"></li>
                            <li class="active"><a href="#" onclick="clickUPS()" id="ship">Track a Shipment</a></li>
                            <li class="divider" style="border-top: 1px solid #dbdbdb;"></li>
                            <li class="active"><a href="~/Locations/Index" id="location">UPS Location</a></li>
                            <li class="divider" style="border-top: 1px solid #dbdbdb;"></li>
                            <li class="active"><a href="@Url.Content("~/Shipment/Create")" id="create">Create a Shipment</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="four columns" style="width:200px;">
        </div>
    </div>
</div>





