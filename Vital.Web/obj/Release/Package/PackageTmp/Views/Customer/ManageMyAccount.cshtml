@model IEnumerable<Vital.Model.CustomerAccountModel>

@{
    ViewBag.Title = "Manage My Account";
}

<div class="panel" style="background: #ededed; border: #ededed; margin-top: 0px; padding-top: 5px;">
    <div class="row">
        <div class="twelve columns">
            <h2 style="color: #f79020; margin-bottom: 25px;">Manage My Account</h2>
        </div>
    </div>
    <div class="row">
        <div class="twelve columns">
            <dl class="tabs" style="border-bottom: solid 1px #ee8f1e; margin-bottom: 0px;">
                <dd class="active"><a href="~/Customer" style="cursor: pointer; color: #ffffff; width: 120px; background: url('/Content/images/whitelockicon.png') no-repeat 78% #ee8f1e; border-left: 1px solid #ee8f1e; border-right: 1px solid #ee8f1e; font-weight: normal;">My Vital</a></dd>
            </dl>
            <ul class="tabs-content">
                <li class="active" id="simple1Tab">
                    <div class="panel" style="background: #fff; border: solid 1px #ee8f1e; margin: 0 0 22px 0; padding-top: 0px;">
                        <div class="row">
                            <div class="twelve columns">
                                <h5>Manage My Account</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="twelve columns">
                                <fieldset>
                                    <legend style="color: #f6a11d; margin-bottom: 10px;">UPS Account Details</legend>
                                    <table>
                                        <thead>
                                            <tr>
                                                <th>Account Number</th>
                                                <th>Rate Year</th>
                                                <th>Term</th>
                                                <th>Is UPS Enabled</th>
                                                <th>&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.RateYear)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TermName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UPSEnabled)
                                                    </td>
                                                    <td>
                                                        
                                                        <input type="button" class="button" value="Delete" onclick="deleteBtn('@item.Id')" />
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <script type="text/javascript">

                                        function deleteBtn(id) {
                                            var url = "http://86e5809092cb478994f1900a6012ac93.cloudapp.net/Customer/DeleteAccountNumber";
                                            var answer = confirm("Do you really want to delete this data?");
                                            if (answer) {

                                                $.post(url,{accountNumberId:id},function(result){

                                                    if (result.status == "success") {
                                                        alert("You've succesffully the data.")
                                                        window.location = "http://86e5809092cb478994f1900a6012ac93.cloudapp.net/Customer/ManageMyAccount";
                                                    }


                                                },"json");
                                            }
                                        }

                                    </script>
                                    <div class="row">
                                        <div class="twelve columns">
                                            @Html.ActionLink("Create New", "CreateAccount", "Customer")
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div>
                       
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
