@model IEnumerable<Vital.Model.NewsModel>
<html>
<head>
    <title>Vital Admin</title>
    <link rel="stylesheet" href="~/Content/admincss/style.css" />
    <link rel="stylesheet" href="~/Content/admincss/blue/style.css" />
    <script type="text/javascript" src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/admin.js"></script>

</head>
<body>
    <div class="mainContainer">
        <div class="homeContainer">
            <div class="header">
                <div style="float:left;width:auto;">
                    <img src="~/Content/adminimages/bannerimage.png" />
                </div>
                <div style="float:right;width:auto;">
                    <br />
                    <a href="/Admin/Accounts">ACCOUNTS</a> | <a href="/Admin/News">NEWS</a> | <a href="http://86e5809092cb478994f1900a6012ac93.cloudapp.net/Admin/">LOGOUT</a>

                </div>
            </div>

            <div class="mainBody">
                <input type="button" id="addNews" value="Add News" onclick="AddNews()" />
                <table align="center" class="tablesorter">
                    <thead>
                        <tr style="font-weight:bold" align="center">
                            <td>&nbsp;</td>
                            <td>Title</td>
                            <td>Date</td>
                            <td>Caption</td>
                            <td>Content</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- do the loop here !-->
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>&nbsp;</td>
                                <td>@Html.DisplayFor(modelItem => i.NewsTitle)</td>
                                <td>@Html.Raw(i.NewsDate.ToString("MMMM dd, yyyy"))</td>
                                <td>@Html.DisplayFor(modelItem => i.NewsCaption)</td>
                                <td>
                                    @{var TempData = i.NewsContent.Replace("\n", "<br>");}
                                @foreach (var j in TempData)
                                {
                                    @Html.Raw(j);

                                }

                                <br />
                            </td>
                            <td><input type="button" id="viewBtn" value="View" onclick="window.location.href='/Admin/ViewNews/?newsid=@i.ID'" /></td>
                            <td><input type="button" id="deleteBtn" value="Delete" onclick="deleteNews('@i.ID')" /></td>
                        </tr>

                        }



                        <!-- end !-->
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</body>
</html>