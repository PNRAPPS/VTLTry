@model Vital.Model.LoginModel

@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @style = "padding-left: 20px; padding-right: 20px; padding-top: 20px;" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <h2 style="color: #58585a;">Login</h2>
    <label class="lead">Username</label>
    @Html.EditorFor(model => model.UserName)
    <label class="lead">Password</label>
    @Html.EditorFor(model => model.Password)
    <label>
        @Html.EditorFor(model => model.RememberMe)
        Remember Me</label>
    <input class="radius button right" value="Login" type="submit" />
}

<div class="panel" style="background: #58585a; border: #58585a; padding-top: 10px; padding-bottom: 10px; margin-bottom: 0px; margin-top: 50px;">
    <p style="color: white;">Don't have an account? <a href="~/Account/Register">Register Now!</a></p>
</div>
<a class="close-reveal-modal">&#215;</a>
