            if (opt.options[i].text === country.value) {
                opt.selectedIndex = i;
                break;
            }
        }

        $('#OptCountry').on("click", function () {
            var dd = document.getElementById('OptCountry');
            var country = document.getElementById('CountryTextBox');
            country.value = dd.options[dd.options.selectedIndex].text;
        });
    });

</script>